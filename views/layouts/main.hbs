    <script src="//cdn.bootcss.com/angular.js/1.6.0/angular.min.js"></script>
    <script>
      var app = angular.module('app', []);
      app.config([
        '$interpolateProvider', 
        function ($interpolateProvider) {
          $interpolateProvider.startSymbol('$');
          $interpolateProvider.endSymbol('$');
        }
      ]);
    </script>

    {{{_sections.head}}}    

    <!-- 在开发模式中跳过打包和缩小 -->
