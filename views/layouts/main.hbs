    {{{body}}}
    
    <script src="{{static '/vendor/jquery/jquery-3.1.1.min.js'}}"></script>
    <script src="{{static '/vendor/html5-boilerplate/js/plugins.js'}}"></script>
    <script src="{{static '/vendor/bootstrap/js/bootstrap.min.js'}}"></script>
    

    {{{_sections.jquery}}}

