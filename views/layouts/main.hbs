      <script src="{{static '/vendor/unit-test/chai.js'}}" ></script>
      <script type="text/javascript">
      	mocha.ui('tdd');
      	var assert = chai.assert;
      </script>
      <script src="{{static '/qa/tests-global.js'}}"></script>
      {{#if pageTestScript}}
